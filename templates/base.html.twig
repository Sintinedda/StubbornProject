<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <meta name="view-transition" content="same-origin" />
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
            <link href="{{ asset('css/nav.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/footer.css') }}" rel="stylesheet"/>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
            <script src="{{ asset('js/showMenu.js') }}"></script>
        {% endblock %}
    </head>
    <body class="body" id="{% block body_id %}{% endblock %}">
        {% block header %}
            {% set _route = app.request.get('_route') %}
                <div class="nav-container">
                    <div class="nav-start">
                        <img class="nav-logo" src="{{ asset('img/Logo.png') }}" alt="Logo entreprise Stubborn" />
                        <p class="nav-slogan">Don't compromise on your look</p>
                    </div>
                    <div class="nav-menu">
                        <button class="nav-menu-btn" onclick="showMenu('menu-burger', 'menu-btn')" id="menu-btn">
                            <svg class="nav-menu-icon" xmlns="http://www.w3.org/2000/svg" width="5vw" height="6vw" viewBox="0 0 24 24"><path fill="currentColor" d="M3 18v-2h18v2zm0-5v-2h18v2zm0-5V6h18v2z"/></svg>
                        </button> 
                        <ul class="nav-menu-list" id="menu-burger">
                            <li class="nav-menu-item"><a class="nav-menu-link" href="{{ path('app_home') }}">Accueil</a></li>
                            <li><span class="nav-menu-span"></span></li>
                            <li class="nav-menu-item"><a class="nav-menu-link" href="">S'inscrire</a></li>
                            <li><span class="nav-menu-span"></span></li>
                            <li class="nav-menu-item"><a class="nav-menu-link" href="">Se connecter</a></li>
                        </ul>
                    </div>
                </div>
        {% endblock %}
        {% block body %}
            {% block main %}{% endblock %}
        {% endblock %}
        {% block footer %}
            <div class="footer-container">
                <div class="footer-div">
                    <p class="footer-title">Stubborn</p>
                    <a href="">
                        <img class="footer-logo" src="{{ asset('img/Logo.png') }}" alt="Logo entreprise Stubborn" />
                    </a>
                </div>
                <div class="footer-div">
                <p class="footer-title">Adresse</p>
                <address>
                    <a class="footer-link" href="">
                        Piccadilly Circus,<br>
                        London W1J 0DA, <br>
                        Royaume Uni
                    </a>
                </address>
                </div>
                <div class="footer-div">
                    <p class="footer-title">Contact</p>
                    <address>
                        <a class="footer-link" href="mailto:stubborn@blabla.com">stubborn@blabla.com</a>
                    </address>
                </div>
            </div>
        {% endblock %}
    </body>
</html>
